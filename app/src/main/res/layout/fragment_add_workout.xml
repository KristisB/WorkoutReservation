<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#000000"
            android:text="@string/add_workout"
            android:textColor="#ffffff"
            tools:text="Add workout" />


        <DatePicker
            android:id="@+id/addWorkoutDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="4"
            android:background="#CCEEEEEE"
            android:calendarViewShown="false"
            android:datePickerMode="spinner"
            android:layout_margin="10dp"
            android:spinnersShown="true" />

        <TimePicker
            android:id="@+id/addWorkoutTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:background="#CCEEEEEE"
android:layout_margin="10dp"
            android:timePickerMode="spinner" />

        <EditText
            android:id="@+id/maxGroupSizeText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#CCFFFFFF"
            android:inputType="number"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:padding="10dp"
            android:text="2"
            android:textColor="#000000" />

<!--        <EditText-->
<!--            android:id="@+id/workoutDurationText"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:background="#CCFFFFFF"-->
<!--            android:hint="@string/workout_duration"-->
<!--            android:inputType="time"-->
<!--            android:layout_margin="10dp"-->
<!--            android:padding="10dp"-->
<!--            android:textColor="#000000" />-->

        <EditText
            android:id="@+id/workoutDescriptionText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#CCFFFFFF"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:padding="10dp"
            android:hint="@string/workout_description"
            android:textColor="#000000" />

        <Button
            android:id="@+id/submitButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#111111"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:text="@string/submit"
            android:textColor="#ffffff" />

    </LinearLayout>

</layout>
